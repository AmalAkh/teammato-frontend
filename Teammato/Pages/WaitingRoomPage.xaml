<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Teammato.Pages.WaitingRoomPage"
             Title="Waiting room">
    <Shell.BackButtonBehavior>
        <BackButtonBehavior Command="{Binding CancelCommand}"/>
    </Shell.BackButtonBehavior>
    <ContentPage.Content>
        <StackLayout Padding="6">
            
            <Label Text="{Binding GameName}"/>
            <CollectionView ItemsSource="{Binding Participants}" SelectedItem="{Binding SelectedChat, Mode=TwoWay}" SelectionChangedCommand="{Binding SelectChatCommand}" SelectionMode="Single">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="4,5,5,5">
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding SelectChatCommand}"/>
                            </Grid.GestureRecognizers>
                                <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Frame Margin="20,0,0,0" CornerRadius="50" IsClippedToBounds="True" WidthRequest="50"  Grid.Column="0" HeightRequest="50">
                                <Image WidthRequest="50"  Source="{Binding Image}"  Grid.Column="0" HeightRequest="50" BackgroundColor="Gray"/>
                            </Frame>
                            <StackLayout Grid.Column="1">
                                <Label VerticalTextAlignment="Center"  MaxLines="1" FontAttributes="Bold" Margin="10,0,0,6"   Text="{Binding NickName}"/>
                                
                            </StackLayout>
                        </Grid>
                                
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>