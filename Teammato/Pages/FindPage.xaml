<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Teammato.Pages.FindPage"
             xmlns:controls="clr-namespace:Teammato.Controls">
    <ContentPage.Content>
        <FlexLayout Direction="Column">
            
            <ScrollView FlexLayout.Basis="92%">
                <StackLayout Padding="10">
                    <Label Text="Games" FontAttributes="Bold" FontSize="18"/>
                    <CollectionView ItemsSource="{Binding Languages}">
                        
                    </CollectionView>
                    <Label Text="Languages" FontAttributes="Bold" FontSize="18"/>
                    <CollectionView>
                        
                    </CollectionView>
                    <Grid ColumnDefinitions="4*, *">
                        <Label Text="Teammates" VerticalTextAlignment="Center"/>
                        <controls:CustomEntry Grid.Column="1" ReturnType="Done"  Keyboard="Numeric"  />
                    </Grid>
                    <Label Text="Duration" FontAttributes="Bold" FontSize="18"/>
                    <Grid Margin="0,10,0,0" ColumnDefinitions="2*, *,*,*, *, *">
                        <Label Text="Teammates" FontAttributes="Bold" VerticalTextAlignment="Center" Grid.Column="0"/>
                        <Label Text="From" Grid.Column="1" VerticalTextAlignment="Center"/>
                        
                        <controls:CustomEntry Grid.Column="2" ReturnType="Done"  Keyboard="Numeric"  />
                        <Label HorizontalTextAlignment="Center" Text="To" Grid.Column="3" VerticalTextAlignment="Center"/>
                        <controls:CustomEntry Grid.Column="4" ReturnType="Done"  Keyboard="Numeric"  />
                        <Label HorizontalTextAlignment="Center" Text="(Hours)" Grid.Column="5" VerticalTextAlignment="Center"/>
                    </Grid>
                    <Grid ColumnDefinitions="100*, *">
                        <Label Text="Find the nearest to you" VerticalTextAlignment="Center" FontAttributes="Bold"/>
                        <Switch/>
                    </Grid>
                </StackLayout>
                
            </ScrollView>
            <FlexLayout FlexLayout.Basis="8%">
                <Button Margin="2" Text="Search" FlexLayout.Basis="50%"/>
                <Button Margin="2" Text="Create a game" FlexLayout.Basis="50%"/>
            </FlexLayout>
        </FlexLayout>
    </ContentPage.Content>
</ContentPage>